<h1>Admin Dashboard</h1>


<div class="container">
  <ul> 
    <li>Total Categories: <%= @categories_count %></li>
    <li>Total Products: <%= @product_count %></li>
  </ul>

  <%= link_to 'Link to Products', [:admin, :products] %>
  
  <h3> Protucs per category: </h3>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Category Name</th>
        <th>Products per Category</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.products.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

